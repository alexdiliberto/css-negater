<!-- TODO: Describe the options selected. -->
{{#if options}}
<ul>
	{{#each options}}
	<li>{{this}}</li>
	{{/each}}
</ul>
{{/if}}

<!-- TODO: Display the generated CSS in CodeMirror? -->
{{output}}

