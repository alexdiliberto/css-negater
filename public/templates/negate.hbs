        <!-- Copy to clipboard links. -->
        <div class="buttons">
            <button id="copycss" data-clipboard-target="output">Copy</button>
            <button><a href="{{cssurl}}" download="negated.css">Download</a></button>
            <button id="embed" data-clipboard-text='&lt;link rel="stylesheet" href="{{cssurl}}" /&gt;'>Embed</button>
        </div>

        <script type="text/javascript" src="js/vendor/ZeroClipboard.min.js"></script>
        <script>
            ZeroClipboard.setDefaults( { moviePath: 'js/vendor/ZeroClipboard.swf' } );
            var clip1 = new ZeroClipboard(document.getElementById('copycss'));
            var clip2 = new ZeroClipboard(document.getElementById('embed'));
        </script>

        <!-- Display the output in a CodeMirror instance. -->
        <textarea id="output">{{output}}</textarea>
        <script src="codemirror/lib/codemirror.js"></script>
        <script src="codemirror/mode/css/css.js"></script>
        <script>
        var editor = CodeMirror.fromTextArea(document.getElementById('output'), {
            lineNumbers: true,
            mode: "text/css"
        });
        </script>

